extends layout

block content
  
  script
    var socket = io.connect('http://localhost:3000');
    socket.on('change', function (data) {
      console.log(data);
      location.reload(true);
    });

  h1= title
  
  if error
    p #{error}

  form(action='/setvol', method='post')
    input(name='volume', value='#{status.volume}')
    button Set Volume

  p Status is #{status.state}

  if info.Title
    p Now playing: #{info.Title} by #{info.Artist} from the album #{info.Album}
  else
    p Now playing: Nothing!

  form(action='/previous', method='post')
    button Previous

  form(action='/toggle', method='post')
    button Play/Pause

  form(action='/next', method='post')
    button Next
  select
    each item in list
      option= item.directory